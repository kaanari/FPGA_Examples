library IEEE;
use IEEE.std_logic_1164.all;
use IEEE.numeric_std.all;

entity Seven_Segment_Decoder is
port(

	binaryNumber: in unsigned(3 downto 0);
	output: out std_logic_vector(6 downto 0)
	
);
end Seven_Segment_Decoder;


architecture Behavioral of Seven_Segment_Decoder is
begin
	
	case binaryNumber is
		
		when 0 => output <= "0111111"; -- DIGIT ZERO
		when 1 => output <= "0000110"; -- DIGIT ONE
		when 2 => output <= "1011011"; -- DIGIT TWO
		when 3 => output <= "1001111"; -- DIGIT THREE
		when 4 => output <= "1100110"; -- DIGIT FOUR
		when 5 => output <= "1101101"; -- DIGIT FIVE
		when 6 => output <= "1111101"; -- DIGIT SIX
		when 7 => output <= "0000111"; -- DIGIT SEVEN
		when 8 => output <= "1111111"; -- DIGIT EIGHT
		when 9 => output <= "1101111"; -- DIGIT NINE
		when others >= output <="0000000"; -- OTHER CASES;
		
	end case;

end Behavioral;